{
    "name": "OCTA",
    "phase": "train", // train or val
    "gpu_ids": [
        0,1,2,3
    ],
    "path": { //set the path
        "log": "logs",
        "tb_logger": "tb_logger",
        "results": "results",
        "checkpoint": "checkpoint",
        "resume_state": null
        //"resume_state": "" 

    },
    "datasets": {
        "train": {
            "name": "OCTA",
            "mode": "HR", 
            "dataroot": "", 
            "datatype": "img", //lmdb or img, path of img files
            "l_resolution": 16, 
            "r_resolution": 256,
            "batch_size": 6,
            "num_workers": 8,
            "use_shuffle": true,
            "image_high": 800,
            "image_width": 288,
            "data_len": -1 // -1 represents all data used in train
        },
        "val": {
            "name": "OCTA",
            "mode": "HR",
            "dataroot": "", 
            "datatype": "img", //lmdb or img, path of img files
            "l_resolution": 16,
            "r_resolution": 256,
            "image_high": 800,
            "image_width": 288,
            "data_len":-1 // data length in validation  
        }
    },
    "model": {
        "which_model_G": "sr3", // use the ddpm or sr3 network structure
        "finetune_norm": false,
        "unet": {
            "in_channel": 2,
            "out_channel": 1,
            "inner_channel": 64,
            "channel_multiplier": [
                1,
                2,
                4,
                8,
                8
            ],
            "attn_res": [
                16
            ],
            "res_blocks": 2,
            "dropout": 0.5
        },
        "beta_schedule": { // use munual beta_schedule for acceleration
            "train": {
                "schedule": "linear",
                "n_timestep": 1100,
                "linear_start": 1e-6,
                "linear_end": 1e-2
            },
            "val": {
                "schedule": "linear",
                "n_timestep": 1, //2000*****************************************
                "linear_start": 1e-6,
                "linear_end": 1e-2
            }
        },
        "diffusion": {
            //"image_size": 128,
            "image_high": 800,
            "image_width": 288,
            "channels": 1, //sample channel
            "conditional": true // unconditional generation or unconditional generation(super_resolution)
        }
    },
    "train": {
        "n_iter": 100000,
        "val_freq": 2, //1e4***************************************************
        "save_checkpoint_freq": 2,
        "print_freq": 1,
        "optimizer": {
            "type": "adam",
            "lr": 1e-4 
        },
        "ema_scheduler": { // not used now
            "step_start_ema": 5000,
            "update_ema_every": 1,
            "ema_decay": 0.999
        }
    },
    "wandb": {
        "project": "sr_ffhq"
    }
}
